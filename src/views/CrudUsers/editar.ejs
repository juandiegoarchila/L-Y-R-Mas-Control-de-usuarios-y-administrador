<!-- views/CrudUsers/editarUsuario.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Usuario</title>
    <!-- Agrega cualquier estilo adicional si es necesario -->
</head>
<body>
    <h1>Editar Usuario</h1>
    <form action="/usuarios/editar/<%= usuario.id %>" method="post">
        <!-- Utiliza el método HTTP POST para enviar el formulario -->
        <label for="name">Nombre:</label>
        <input type="text" id="name" name="name" value="<%= usuario.name %>" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= usuario.email %>" required>

        <!-- Agrega más campos según sea necesario -->

        <button type="submit">Guardar cambios</button>
    </form>
</body>
</html>
